<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>10.0</LangVersion>
    <PackageId>AzTablesCache</PackageId>
    <Version>0.1.0</Version>
    <Authors>Giancarlo Fontela da Luz</Authors>
    <Description>Key-Value cache system using Azure Table Storage as persistence</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RepositoryUrl>https://github.com/Giancarl021/AzTablesCache.git</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Giancarl021/AzTablesCache</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Data.Tables" Version="12.6.1" />
    <PackageReference Include="Azure.Identity" Version="1.6.0" />

    <None Include="LICENSE" Pack="true" PackagePath=""/>
    <None Include="assets/icon.png" Pack="true" PackagePath=""/>
  </ItemGroup>

</Project>
